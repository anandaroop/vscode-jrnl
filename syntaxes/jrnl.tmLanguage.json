{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Jrnl",
  "patterns": [
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.timestamp.jrnl",
          "match": "^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}"
        },
        {
          "name": "keyword.control.tag.jrnl",
          "match": "\\s@\\w+\\b"
        },
        {
          "name": "comment.extraLines.jrnl",
          "match": "^\\w+.*"
        }
      ]
    }
  },
  "scopeName": "text.jrnl"
}
